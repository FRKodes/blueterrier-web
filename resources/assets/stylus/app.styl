.btn-container
	display flex
	margin 30px 0
.btn-bt
	background azul
	color negro
	display flex
	margin 0 auto
	padding 8px 28px
	width 90%
.link.icon-flecha
.link.icon-mas
	background negro
	color azul
	height auto
	display flex
	justify-content center
	align-items center
	padding 8px 10px
	width 10%
.banner-home
	height 720px
	.item
		display inline-block
		height 100%
		width 100%
		overflow hidden
		.inner-element
			width 60%
			height auto
			display block
			position absolute
			overflow hidden
			right 0
			bottom 0
.pistones
	background transparent url(../../images/pistones-mobile.jpg) no-repeat center top
	background-size cover
	img
		width 140%
		height auto
		display block
		margin-right -35%
.works-home
	.item-work
		height auto
		overflow-x hidden
		text-align center
		width 100%
		img
			display block
			height auto
			width 110%
    		margin-left -5%
	.kamado
		background-color beige
	.agua-maldita
		background black
	.boreal
		background #E81C25
	.otro
		background green

/*Services*/
.item-services
	margin-bottom 30px
	margin-top 30px
	.icon-service
		font-size 12em
		line-height .6em
		text-align center
	.description
		font-size 1.1em
		text-align center
.services-home-container
	.slick-dots
		padding 0
		text-align center
		li
			display inline-block
			height 10px
			margin 0 5px
			width 10px
			button
				background-color gris0
				border none
				color transparent
				display block
				height 100%
				padding 0
				transition background-color 1s ease
				width 100%
				&:focus
					outline none
			&.slick-active button
				background-color azul2
				transition background-color 1s ease
/*SERVICES*/
.inner-banner
	height 670px
	background-color gris0
	display block
	color blanco
	position relative
	&.services
		background transparent url(../../images/banner-services-mobile.jpg) no-repeat center center
		background-size cover
.inner-banner-text
	position absolute
	bottom 10px
	.arrow-down-btn
		width 30px
		height 30px
		display flex
		margin 10px auto
		background-color azul2
		color azul
		justify-content center
		align-items center
		align-self center
		.icon-flecha
			font-size 1.2em
			transform rotate(90deg)
			width 15px
			height 15px
			align-self center
.service-btn
	padding-top 20px
	padding-bottom 20px
	height auto
	overflow hidden
	transition height .5s ease
	a
		text-decoration none
		transition color 1s ease
		&:hover
		&:active
		&:focus
			text-decoration none
			color rgba(white, .8)
			transition color 1s ease
	span.icon-mas
		position absolute
		right 10px
		top 10px
		transition all .3s ease
		transform rotate(0deg)
	&.opened
		span.icon-mas
			transform rotate(45deg)
			transition all .3s ease
			right 12px
			top 10px
	h2
		margin-top 0
		text-transform uppercase
		width 40%
	p
		margin 0
	.extra-content
		color white
		height 0px
		transition .5s ease
		overflow hidden
		padding 20px 0 0
		p
			margin-left 15px
			margin-right 15px
		&.web-design
		&.design-adv
		&.web-dev
			background-color transparent
