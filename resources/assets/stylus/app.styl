body
	background white
	font-family 'Ropa Sans', sans-serif
.navbar-default
	background transparent
	border none
	transition background 1s ease
	.navbar-nav>li>a
		color azul
		font-style italic
		font-size 1.2em
	.navbar-brand
		color azul
		font-size 3em
		padding 10px 15px
		&:hover
			color white
			transition color .3s ease
	.navbar-toggle
		border none
		&:hover
			border none
			background transparent
		&:focus
			background none
		.icon-bar
			background azul
			height 3px
			margin-bottom 6px
			width 30px
	.navbar-collapse
		border none
.row.banner
	position relative
.banner-text
	bottom 30px
	color white
	padding-left 15px
	padding-right 15px
	position absolute
	width 100%
	h2
		font-size 1.6em
		span
			display inline-block
			// color rgb(59, 115, 172)
			// -webkit-background-clip text
			// -webkit-text-fill-color transparent
